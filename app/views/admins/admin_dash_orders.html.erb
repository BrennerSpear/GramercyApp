<div class="admin-dash-orders-page">
	<div id="page-wrapper">
		<div class="row admin-table">
			<div class="col-lg-12">
				<div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="data-table">
                        <thead>
                            <tr class="text-center">
                                <th>Brand</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Insta</th>
                                <th>Items</th>
                                <th>Total</th>
                                <th>Method</th>
                                <th>Pay status</th>
                                <th>Source</th>
                                <th>Country</th>
                                <th>uid</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @orders.each do |order| %>
                            <tr class="text-center">
                                <td><%= order.shop.brand.name %></td>
                                <td><%= "#{order.first_name} #{order.last_name}" %></td>
                                <td><%= order.email %></td>
                                <td><%= order.shopper.nickname %></td>
                                <td><%= order.item_count %></td>
                                <td><%= order.total %></td>
                                <td><%= order.payment_method %></td>
                                <td><%= order.payment_status %></td>
                                <td><%= order.source %></td>
                                <td><%= order.country_code %></td>
                                <td><%= order.uid %></td>
                            </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>
			</div>
		</div>
		<div class="row">
			<%= link_to "Back", admin_dashboard_path %>
		</div>
	</div>
</div>