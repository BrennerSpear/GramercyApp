<div class="admin-dash-followers-page">
	<div id="page-wrapper">
		<div class="row admin-table">
			<div class="col-lg-12">
				<div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="data-table">
                        <thead>
                            <tr class="text-center">
                                <th>Brand/Shopper</th>
                                <th>Type</th>
                                <th>Follower</th>
                                <th>Name</th>
                                <th>Picture</th>
                                <th>Created at</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @followed_bys.each do |f| %>
                            <tr class="text-center">
                                <% if f.followable_type == "Shopper" %>
                                    <td><%= @shoppers.find(f.followable_id).nickname %></td>
                                <% else %>
                                    <td><%= @brands.find(f.followable_id).name %></td>
                                <% end %>
                                <td><%= f.followable_type %></td>
                                <td><%= @followers.find(f.follower_id).username %></td>
                                <td><%= @followers.find(f.follower_id).name %></td>
                                <td><%= image_tag @followers.find(f.follower_id).profile_picture, width: "50px;", alt: "Private" %></td>
                                <td><%= f.created_at %></td>
                            </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>
			</div>
		</div>
		<div class="row">
			<%= link_to "Back", admin_dashboard_path %>
		</div>
	</div>
</div>