<div class="containter devise-box">
<%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "form-signin log-in well" }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :unlock_token %>
  	<h2>Resend unlock instructions</h2>
  	<br>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email" %>
	<br>
    <%= f.button :submit, "Resend unlock instructions", class: "btn btn-primary btn-block gramercy-bg-color" %>
    <br>
    <%= render "devise/shared/links" %>
<% end %>
</div>


