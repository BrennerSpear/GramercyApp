<%= stylesheet_link_tag "home", media: "all", "data-turbolinks-track" => true %>

<div class="home-page">
	<section class="section title-section">
		
		<div class="text-area">
			<%= image_tag "g-logo-off-white-xl", class: "title-img" %>
			<h3>Turn your shoppers into Brand Advocates</h3>
			<br>
			<br>
			<%= render '/leads/form', submit_text: 'Get Started »' %>
		</div>

	</section>

	<div class="divider-dark"></div>


	<section class="reason-section">
		<div class="text-area">

			<h2 class="text-center">Just saying thanks can help your brand</h2>
			<br>
			<br>
			<div class="row">
				<div class="col-md-4 reason">
					<p class="reason-title">Get Shopper-generated ad content</p>
					<%= image_tag "icon1", class: "reason-img" %>
