<!-- couldnt get it to reference the custom_home.js file so I just put the moble/desktop toggle in a script -->

<script type="text/javascript">
var width = window.innerWidth;

if (width < 858)
{
	document.getElementById('toggle').innerHTML = "<%= escape_javascript render(partial: 'layouts/how_it_works_mobile') %>";
} else {
	document.getElementById('toggle').innerHTML = "<%= escape_javascript render(partial: 'layouts/how_it_works_desktop') %>";
}
 
</script>