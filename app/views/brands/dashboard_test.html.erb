<body>
    <%= stylesheet_link_tag "dashboard_test", media: "all", "data-turbolinks-track" => true %>

    <div class="dashboard-page">

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header text-center"><%=  %>Dashboard</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-sm-6">
                    <% @posts.each do |post| %>
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-sm-8 bigger">
                                        <%= post.shopper.name %> (<%= link_to post.shopper.nickname, post.link %>)
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="pull-right smaller time-left">Time left: <%= distance_of_time_in_words(post.created_at + 3.days, Time.now)%></div>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-8 give">
                                        <%= image_tag post.image, width: "100%" %><br>
                                        <%= post.caption %>
                                    </div>
                                    <div class="col-sm-4 take">
                                        <div class="bigger">
                                            <strong>Likes: <%= post.likes %></strong> <br><br>
                                            New followers:
                                            <%post.followers_generated.each do |f|%>
                                            <%= link_to @followers.find(f).username, "https://instagram.com/#{@followers.find(f).username}", target: '_blank' %>
                                            <% end %>
                                        </div>
                                        <div style="position: absolute; bottom: 0;">
                                            Location <br>
                                            Order Total
                                        </div>
                                    </div>
                                </div> 
                            </div>
                            <div class="panel-footer smaller">
                                <div class="row">
                                    <div class="col-sm-6">
                                        Rate: <%= post.order.cents_per_like %>Â¢/like & $<%= sprintf('%.2f' % post.order.dollars_per_follow) %>/follow
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="pull-right"><%= local_time(post.created_at, "Posted on %a, %b %d at %I:%M %p") %></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>  


        </div>
    </div>

    <script type="text/javascript">
    $( document ).ready(function() {
    var heights = $(".give").map(function() {
        return $(this).height();
    }).get(),

    maxHeight = Math.max.apply(null, heights);

    $(".take").height(maxHeight);

    });
    window.onresize=function() {
    var heights = $(".give").map(function() {return $(this).height();}).get(),

    maxHeight = Math.max.apply(null, heights);

    $(".take").height(maxHeight);

    };
    </script>
</body>